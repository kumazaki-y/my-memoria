.container
  .row.align-items-center.mb-2.custom-row
    .col-auto
      %p.display-4 My-Memoria
    .col-auto
      = link_to 'Guest Login', users_guest_sign_in_path, method: :post, class: "custom-link-btn custom-btn custom-btn-primary"
    .col
    .col-auto
      = link_to "Sign Up", new_user_registration_path, class: "custom-link"

  %div.position-relative.text-center.custom-img-container
    = image_tag("Rectangle.png", alt: "ログイン画像", class: "custom-img login-img mt-1 img-fluid")
    %div.overlay-text.position-absolute.w-100.h-20.d-flex.justify-content-center.align-items-center
      %p.lead.font-weight-bold.text-black-90
        思い出を共有しよう

  .form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :Email,class: "f-label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class: "form"
      .field
        = f.label :Password,class: "f-label"
        %br/
        = f.password_field :password, autocomplete: "current-password",class: "form"
      .link-container
        = link_to "Forgot your password?", new_password_path(resource_name) ,class: "custom-link"

      .submit
        = f.submit "Login",class: "btn btn-primary"
