= image_tag("Rectangle.png", alt: "ログイン画像", class: "image")

.form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :Email,class: "f-label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",class: "form"
    .field
      = f.label :Password,class: "f-label"
      %br/
      = f.password_field :password, autocomplete: "current-password",class: "form"
    .link-container
      = link_to "Forgot your password?", new_password_path(resource_name) ,class: "btn-link"
      = link_to "Sign up", new_user_registration_path ,class: "btn-link"

    .submit
      = f.submit "LOGIN",class: "btn btn-primary"
